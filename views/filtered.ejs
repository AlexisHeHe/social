<!DOCTYPE html>
<html lang="en">
  <%- include('./reusedjs/header.ejs') %>
<body style="padding-bottom: 500px;">
  <%- include('./reusedjs/navbar.ejs') %>
  <% if(info.username){ %>
    <p><%= info.username %></p>

    <% }else{ %>
      <p>Logged out</p>
      <% } %>

    <% if(posts.length > 0){ %>
    <% posts.forEach(post => { %>
        <div class="container" style="text-align: left;">
          <div class="row">
            <div class="col-2"></div>
            <div class="col-8 bg-secondary">
              <div style="border: 4px solid black; border-radius: 10px; margin: 5px;">
                <h5 class="ps-3 text-uppercase"><%= post.topic %></h5>
                <p class="ps-3"><%= post.body %></p>
                <p class="ps-3">By: <%= post.author %></p>
              </div>
            </div>
          </div>
        </div>

      <%  }) %>
    <% }else{ %>
      <p>No Posts</p>
    <% } %>

    <form action="/filter" method="post">
      <input type="text" name="filter" id="filter" placeholder="e.g 'Gaming'">
      <input type="submit" value="Search">
    </form>
</body>
</html>